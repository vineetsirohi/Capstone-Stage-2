<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" tools:showIn="@layout/list_item_submission">

    <ImageView android:id="@+id/thumbnail"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/empty_detail"
               android:adjustViewBounds="true"
               android:scaleType="fitCenter"
               android:contentDescription="@string/thumbnail_for_the_post"/>

    <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_left"
            android:paddingStart="@dimen/card_padding_left"
            android:paddingRight="@dimen/card_padding_right"
            android:paddingEnd="@dimen/card_padding_right"
            android:paddingTop="@dimen/title_padding_top"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="@dimen/text_size_title"
            tools:text="A Flatiron State of Mind"/>

    <TextView
            android:id="@+id/subtext"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_left"
            android:paddingStart="@dimen/card_padding_left"
            android:paddingRight="@dimen/card_padding_right"
            android:paddingEnd="@dimen/card_padding_right"
            android:paddingBottom="@dimen/subtext_padding_bottom"
            android:textSize="@dimen/text_size_subtext"
            tools:text="r/movies &#8226; 4h &#8226; TheEagles"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_padding_left"
            android:paddingStart="@dimen/card_padding_left"
            android:paddingRight="@dimen/card_padding_right"
            android:paddingEnd="@dimen/card_padding_right"
            android:paddingBottom="@dimen/stats_panel_padding_bottom">

        <ImageView
                android:id="@+id/up_arrow"
                android:layout_width="@dimen/up_arrow_iv_width"
                android:layout_height="match_parent"
                android:src="@drawable/ic_up_arrow"
                android:scaleType="fitCenter"
                android:contentDescription="@string/up_arrow_icon"/>

        <TextView
                android:id="@+id/upvotes_text"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_subtext"
                tools:text="472"/>

        <ImageView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/stats_panel_horizontal_padding"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_comments"
                android:contentDescription="@string/comments_icon"/>

        <TextView
                android:id="@+id/comments_text"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/stats_panel_horizontal_padding"
                android:paddingRight="@dimen/card_padding_right"
                android:textSize="@dimen/text_size_subtext"
                tools:text="72"/>

    </LinearLayout>

</LinearLayout>